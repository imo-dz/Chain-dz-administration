<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChainDZAdministration" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/mainColor</item>
        <item name="android:colorPrimary">@color/mainColor</item>
        <item name="android:colorAccent">@color/mainColor</item>
        <item name="colorControlActivated">@color/mainColor</item>
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/mainColor</item>
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="statusBarBackground">@color/mainColor</item>
        <item name="statusBarForeground">@color/mainColor</item>
    </style>
    <style name="CustomOverlayTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/secColor</item>
    </style>
    <style name="AppTheme.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- Customize attributes here -->
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="buttons" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/biennale_semi_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
    <style name="Theme.ChainDZAdministration" parent="Base.Theme.ChainDZAdministration" />
</resources>